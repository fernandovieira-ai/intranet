# Configuração do Servidor
PORT=3000
NODE_ENV=production

# Banco de Dados PostgreSQL
# No Railway, use a variável DATABASE_URL que é fornecida automaticamente
# ou configure manualmente:
DB_HOST=seu-host-postgresql.railway.app
DB_NAME=railway
DB_USER=postgres
DB_PASS=sua-senha-aqui
DB_PORT=5432

# Sessão
SESSION_SECRET=gere-um-secret-aleatorio-seguro-aqui

# HTTPS (não necessário no Railway - eles fornecem SSL automaticamente)
USE_HTTPS=false
HTTPS_PORT=443
REDIRECT_HTTP=false

# SSL (desabilitar no Railway)
# SSL_KEY_PATH=
# SSL_CERT_PATH=
# SSL_CA_PATH=

# Domínio (opcional)
DOMAIN=seu-app.railway.app
